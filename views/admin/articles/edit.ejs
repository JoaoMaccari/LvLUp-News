<%- include('../../partials/header') -%>
<%- include('../../partials/navbar') -%>


<div class="container">
    <hr>
    <div class="card">
                    <div class="card-header">
                        <h2>Editar Artigo</h2>
                    </div>
    
        <div class="card-body">
            <form method="POST" enctype="multipart/form-data" action="/articles/update">

                <input class="form-control" type="file" name="file" value="<%= article.capa_artigo%>"  multiple="multiple">
                <input type="hidden" value="<%= article.id %>" name="id">
                <input class="form-control" type="text" name="title" placeholder="<%= article.title %>"><br>
                
                <textarea class="form-control" name="body" id="article" cols="30" rows="5" placeholder="Escreva o artigo aqui" ><%- article.body %></textarea>
                <label for="">Categoria</label>
                <select name="category"  class="form-control">
                    <% categories.forEach((category) =>{ %>

                        <% if(category.id == article.categoryId) { %>
                            <option value="<%=category.id%>" selected><%= category.title %></option>
                        <% } else { %>
                            <option value="<%=category.id%>"><%= category.title %></option>
                        <% } %>
                        
                    <% }) %>   
                </select>
                <br>
                <button type="submit" class="btn btn-success">Atualizar</button>
            </form>
        </div>
    </div> 
</div>
</div>



<%- include('../../partials/footer') -%>

<script src="/tinymce/js/tinymce/tinymce.min.js"></script>

<script>
    tinymce.init({
        language: 'pt_BR',
        selector: "#article",
        plugins: [
                    'advlist',
                    'autolink',
                    'link',
                    'image',
                    'lists',
                    'preview',
                    'searchreplace',
                    'wordcount',
                    'fullscreen',
                    'insertdatetime',
                    'media',
                    'save',
                    'table',
                    'emoticons',
                ],
                // init_instance_callback: ()=>{
