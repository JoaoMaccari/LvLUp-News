<%- include('../../partials/header') -%>
<%- include('../../partials/navbar') -%>


<link rel="stylesheet" href="/css/style.css">




<div class="container">
    <hr>
    
    <div class="card mt-5">
        <div class="card-header">
            <h2>Criação de usuários</h2>
        </div>
        <div class="card-body">

            <form action="/admin/user/criar" method="POST">

                <% if (emailJaCadastrado) { %>
                    <div class="alert alert-danger"><h2><%= emailJaCadastrado %></h2></div>
                    
                <% } %>
                <input type="email" class="form-control" value="<%=email%>" name="email" 
                placeholder="email@exemplo.com"><br>
                
                <input type="password" class="form-control" value="<%=senha%>" name="password" placeholder="*******"><br>
               
                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-block" >Criar</button>
                </div>

                <% if (emailError) { %>
                    <div class="alert alert-danger"><h2><%= emailError %></h2></div>
                    
                <% } %>

                <% if (passwordError) { %>
                    <div class="alert alert-danger"><h2><%= passwordError %></h2></div>
                    
                <% } %>

                

                
            </form>
        </div>

    </div>
</div>



<%- include('../../partials/footer') -%>