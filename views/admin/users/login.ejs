<%- include('../../partials/header') -%>


<div class="container">
    <hr>
    <div class="card mt-5">
        <div class="card-header">
            <h2>Login</h2>
        </div>
        <div class="card-body">

            
            <% if (emailInvalido) { %>
                <div class="alert alert-danger"><h2><%= emailInvalido %></h2></div>
                
            <% } %>
            <form action="/authenticate" method="POST">
                <input type="email" class="form-control" name="email" value="<%= email%>" placeholder="email@exemplo.com"><br>
                <% if (emailError) { %>
                    <div class="alert alert-danger"><h2><%= emailError %></h2></div>
                    
                <% } %>
                <input type="password" class="form-control" name="password" value="<%= senha%>" placeholder="*******"><br>
                <% if (passwordError) { %>
                    <div class="alert alert-danger"><h2><%= passwordError %></h2></div>
                    
                <% } %>

                <% if (senhaIncorreta) { %>
                    <div class="alert alert-danger"><h2><%= senhaIncorreta %></h2></div>
                    
                <% } %>

              
                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-block">Logar</button>
                </div>
                
            </form>
        </div>

    </div>
</div>


<%- include('../../partials/footer') -%>
